.menu 
    min-height 70vh
    background #000
    position relative
    overflow hidden
.images-container 
    display flex
    justify-content: space-between;
    width 100%
    margin 0 auto
  


.images-box 
    flex 30% 
    max-height 70vh
    margin-left 0px
    position relative
 
  
.images-box:hover 
    &:before 
        content ""
        background #f4f4f4
        opacity .5
        position absolute 
        top 0
        width: 100%
        height 100vh
        z-index: 600
        animation slideIn 1s
        overflow hidden

.images-box img 
    width 100%;
    position: absolute
    bottom 0
    top 0
    height 100vh

.menu-title
    position relative
    z-index: 800
    color #f4f4f4
    font-family: "Raleway", Arial, Helvetica, sans-serif
    text-shadow: 1px 2px 10px #000
    transform: rotate(90deg) translateY(-100px)
    font-size rfs(1.3rem)
    width 100%
    top 200px
    left 0
    text-align: center
    letter-spacing: 5px
    z-index: 900
    transition: .2s ease-in

.images-box:hover > .menu-title 
    font-size rfs(1.5rem)
    transition: .2s ease-in
// Mobile
.images-container-mobile
    width 100%
    display flex
    flex-wrap wrap
.images-box-mobile
    flex 100%
    position relative
    min-height 240px
   
.images-box-mobile img
    width 100%
    height 300px
    position absolute
    top 0
    left 0
    right 0
    bottom 0
.menu-title-mobile
    position absolute 
    z-index 800
    font-family "Raleway", Arial, Helvetica, sans-serif
    bottom 0
    left 0 
    right 0
    top 50%
    color #f4f4f4
    text-align center 
    text-shadow: 2px 2px 10px rgba(0,0,0,.5)
.images-box-mobile:hover 
    &:before 
        content ""
        background #f4f4f4
        opacity .5
        position absolute 
        top 0
        width: 100%
        height 100%
        z-index: 600
        animation slideInLeft 1s
        overflow hidden
        clip-path: polygon(0 0, 100% 0%, 75% 100%, 0% 100%);

@keyframes slideIn 
    from 
        transform: translateY(-500px)

    to
        transform: translateY(0px)

@keyframes slideInLeft
    from 
        transform: translateX(-500px)

    to
        transform: translateX(0px)

@media screen and (max-width 968px)
    .images-box 
        flex 50%
        flex-wrap: wrap